<view class="container"><view class="top"><block wx:for="{{userCart}}" wx:for-item="item" wx:for-index="index" wx:key="id"><scroll-view class="scroll-view_H" scroll-x="true" scroll-left="0"><view class="cartInfo"><view class="cartInfochild"><view class="cartInfo_switch common"><switch type="checkbox" data-ind="{{index}}" checked="{{item.check}}" id="{{item.id}}" data-event-opts="{{[['change',[['state',['$event']]]]]}}" bindchange="__e"></switch></view><view class="cartInfo_image common"><image src="{{imgUrl+item.img}}" mode></image></view><view class="cartInfo_info"><label style="font-size:26rpx;" for>{{item.goodsname}}</label><label style="font-size:24rpx;color:#ccc;" for>规格：黑色</label><label style="color:red;" for>{{"￥"+item.price}}</label></view><view class="cartInfo_num"><view class="cartInfo_num_child"><label for data-sum="{{item.num}}" data-type="{{1}}" data-ind="{{index}}" id="{{item.id}}" disabled="{{editState}}" data-event-opts="{{[['tap',[['editNum',['$event']]]]]}}" bindtap="__e">-</label><label for>{{item.num}}</label><label for data-sum="{{item.num}}" data-type="{{2}}" data-ind="{{index}}" id="{{item.id}}" data-event-opts="{{[['tap',[['editNum',['$event']]]]]}}" bindtap="__e">+</label></view></view></view></view><view class="cartDel"><label for id="{{item.id}}" data-event-opts="{{[['tap',[['del',['$event']]]]]}}" bindtap="__e">删除</label></view></scroll-view></block></view><view class="foot"><view class="footd1"><switch type="checkbox" checked="{{allChecks}}" data-event-opts="{{[['change',[['allChecked',['$event']]]]]}}" bindchange="__e"></switch><label>全选</label></view><view class="footd2"><view class="footd2sp1">总计：<label style="color:red;">{{allprice}}</label></view><label class="footd2sp2">不含运费，已优惠￥0.00</label></view><view data-event-opts="{{[['tap',[['checkOut',['$event']]]]]}}" class="footd3" bindtap="__e"><label>{{"去结算("+goodsSelect+"件)"}}</label></view></view><block wx:if="{{noList}}"><view>购物车空空如也</view></block></view>